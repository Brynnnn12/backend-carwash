# 🛢️ Database
DB_DATABASE=db_carwash
DB_HOST=127.0.0.1
DB_USERNAME=root
DB_PASSWORD=
DB_CONNECTION=mysql
DB_PORT=3306  # Port default MySQL

# 🌍 Server
PORT=3000
NODE_ENV=development  # Ubah ke "production" jika sudah live
CLIENT_URL=http://localhost:5173  # Sesuaikan dengan frontend (React/Vue)

# 🔑 JWT (JSON Web Token)
JWT_SECRET=my-super-secret-key
JWT_EXPIRES_IN=1h  # Waktu kedaluwarsa token akses (1 jam)
JWT_REFRESH_SECRET=my-refresh-secret-key  # Tambahkan refresh token untuk keamanan lebih
JWT_REFRESH_EXPIRES_IN=7d  # Waktu kedaluwarsa refresh token (7 hari)

# 🔐 Keamanan
RATE_LIMIT_MAX=100  # Maksimum request per IP dalam 15 menit
CORS_ORIGIN=http://localhost:5173  # Ubah ke domain frontend saat di production
CORS_METHODS=GET,POST,PUT,DELETE  # Batasi metode HTTP yang diizinkan

# 📧 Email (Opsional, jika mengirim email notifikasi)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=your-email@gmail.com

# 📂 File Upload
UPLOAD_LIMIT=2mb  # Maksimum ukuran file untuk upload
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/jpg,application/pdf  # Format yang diizinkan

# 🔍 Logging & Debugging
LOG_LEVEL=debug  # Level logging (error, warn, info, http, verbose, debug, silly)
